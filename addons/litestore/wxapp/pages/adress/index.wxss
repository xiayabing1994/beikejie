.vccb{
  height:100%;
  width:65px;
  text-align:center;
  font-size:1.2em;
  color:white;
  font-weight:bold;
  display: flex;
  justify-content:center;
  align-items:Center;
}
.delb{
  background-color:#6d189e;
}
.morenb{
  background-color:red;
}

.morenback{
  background-color: rgb(249, 241, 250)!important;
}
.tagdef{
  margin-left:6px;
  top:-2px;
  position:relative;
}
.ob-label{
  font-size:12px;
  line-height:1.2;
  color:#666;
}

.title-class{
